<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.talhaamin.parley.ProfileSetupActivity"
    android:background="@color/launchscreen">

    <ImageView
        android:id="@+id/imgTarget"
        android:background="@drawable/defimage"
        android:onClick="onClickImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop" />
    <EditText
        android:layout_height="40dp"
        android:layout_below="@+id/imgTarget"
        android:id="@+id/edtName"
        android:hint="Enter a display name ..."
        android:background="@drawable/rounded_corner_edittext"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:textAlignment="center"
        android:layout_width="280dp"
        app:layout_constraintHorizontal_bias="0.53"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imgTarget" />

    <Button
        android:text="Submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnSubmit"
        android:onClick="onClickSubmit"
        android:background="@drawable/button_shape"
        app:layout_constraintRight_toRightOf="@+id/edtName"
        app:layout_constraintLeft_toLeftOf="@+id/edtName"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edtName"
        android:textColor="@color/cardview_light_background" />

</android.support.constraint.ConstraintLayout>
